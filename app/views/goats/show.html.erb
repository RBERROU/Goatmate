
<div class="container mt-5">
   <div class="goat-show-container">
       <div class="goat-info user-select-none d-flex">
      <div class="card-info">
        <div >
          <h1 class='goat-name'><%= @goat.name %></h1>
        </div>
       <% if @goat.image.attached? %>
         <img src="<%= url_for(@goat.image) %>" alt="<%= @goat.name %>" class="big-goat-profile-pic m-5">
         <p><%= @goat.bio %></p>

       <% else %>
          <img src="<%= asset_path('default_goat.jpg') %>" alt="<%= @goat.name %>" class="big-goat-profile-pic m-5">
          <p><%= @goat.bio %></p>
       <% end %>
        <div id='goat-price' class='text-center'>
          <h6 class='dollar-sign'>$</h6>
          <h6 class='price-amount'><%= @goat.price_per_day %></h6>
          <h6 class='a-day'>/day</h6>
        </div>

      </div>

          <div class="container" id="stats">
          <h4>Hearding</h4>
          <div class="container">
            <div class="skills hearding" style="width: <%= @goat_skills[:hearding] %>%;">🌳<%= @goat_skills[:hearding] %>%</div>
          </div>

          <h4>Cuteness</h4>
            <div class="container">
              <div class="skills cuteness" style="width: <%= @goat_skills[:cuteness] %>%;">🥹<%= @goat_skills[:cuteness] %>%</div>
            </div>

          <h4>Friendly</h4>
            <div class="container">
              <div class="skills friendly" style="width: <%= @goat_skills[:friendly] %>%;">🤗<%= @goat_skills[:friendly] %>%</div>
            </div>

          <h4>Climbing</h4>
            <div class="container">
               <div class="skills climbing" style="width: <%= @goat_skills[:climbing] %>%;">🐐<%= @goat_skills[:climbing] %>%</div>
            </div>
         </div>
     </div>
           <!-- Booking Form Card -->
    <div id='booking-form' data-controller="check-booking-date">
      <div class="card sticky-top booking-card">

        <div  class="card-body">
          <h2 class="card-title">Book this Goat</h2>

          <%= simple_form_for([@goat, @booking], html: { class: 'booking-form' }) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :rent_start, 'Start Date' %>
              <%= f.date_field :rent_start, class: 'form-control', data: { action: "input->check-booking-date#updateEndDate", check_booking_date_target: "rentStart" }, min: Date.today.to_s %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :rent_end, 'End Date' %>
              <%= f.date_field :rent_end, class: 'form-control', data: { check_booking_date_target: "rentEnd" } %>
            </div>

            <div class="form-group mb-3">
              <%= f.hidden_field :status, value: 'pending' %>
            </div>

            <div class="form-group d-grid">
              <%= f.submit 'Book Now', class: 'btn btn-dark btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>
 </div>
