    <div class="goats-rent-container p-2">
    <div class="container mt-5">
        <h1 class="mb-4">Goats for Rent</h1>
        <div class="goat-container">
            <% @goats.each do |goat| %>
               <div class="goat-card p-1">
                  <% if goat.image.attached? %>
                    <%= image_tag(goat.image, :class =>"goat-image") %>
                  <% else %>
                    <img src="<%= asset_path('goat1.jpg') %>" alt="<%= goat.name %>" class="goat-image">
                  <% end %>
                    <h3><%= link_to goat.name, goat_path(goat), class: 'goat-name-link' %></h3>
                    <p>Price per day: $<%= goat.price_per_day %></p>
                </div>
            <% end %>
        </div>
    </div>
