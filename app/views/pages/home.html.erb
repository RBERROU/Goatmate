    <!-- Goats List Section from Your Code -->
    <div class="container mt-5">
        <h1 class="mb-4">Goats for Rent</h1>
        <div class="goat-container">
            <% @goats.each do |goat| %>
                <div class="goat-card">
                    <% if goat.image.attached? %>
                        <img src="<%= url_for(goat.image) %>" alt="<%= goat.name %>" class="goat-image">
                    <% else %>
                        <img src="<%= asset_path('goat1.jpg') %>" alt="<%= goat.name %>" class="goat-image">
                    <% end %>
                    <h3><%= goat.name %></h3>
                    <p>Price per day: $<%= goat.price_per_day %></p>
                    <%= link_to 'View Goat', goat_path(goat), class: 'btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </div>
