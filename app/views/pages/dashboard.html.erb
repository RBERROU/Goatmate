<div class="container mt-5">
  <div class="row">
    <!-- Current Bookings Section -->
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">
          <h4>Current Bookings</h4>
        </div>
        <div class="card-body">
          <% if @bookings.any? %>
            <table class="table">
              <thead>
                <tr>
                  <th>Goat</th>
                  <th>Status</th>
                  <th>Total Price</th>
                </tr>
              </thead>
              <tbody>
                <% @bookings.each do |booking| %>
                  <tr>
                    <td><%= booking.goat.name %></td>
                    <td><%= booking.status %></td>
                    <td><%= number_to_currency(booking.total_price) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <p>No current bookings.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Your Goats Section -->
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">
          <h4>Your Goats</h4>
        </div>
        <div class="your-goats-card-body">
          <% if @goats.any? %>
            <div class="goats-list">
              <% @goats.each do |goat| %>
                <div class="goat-card mb-3">
                  <% if goat.image.attached? %>
                    <img src="<%= url_for(goat.image) %>" alt="<%= goat.name %>" class="img-fluid goat-image" />
                  <% else %>
                    <img src="<%= asset_path('goat1.jpg') %>" alt="<%= goat.name %>" class="img-fluid goat-image" />
                  <% end %>
                  <h3><%= goat.name %></h3>
                  <p>Price per day: $<%= goat.price_per_day %></p>
                  <%= button_to 'Delete', goat_path(goat), method: :delete, data: { confirm: 'Are you sure you want to delete this goat?' }, class: 'btn btn-danger mt-2', data: { turbo: false } %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p>You don't have any goats listed yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Pending Bookings Section -->
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4">
        <div class="card-header">
          <h4>Pending Bookings</h4>
        </div>
        <div class="card-body">
          <% if @pending_bookings.any? %>
            <ul class="list-group">
              <% @pending_bookings.each do |booking| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Booking for <%= booking.goat.name %>
                  <div>
                    <%= button_to 'Approve', approve_goat_booking_path(booking.goat_id, booking), method: :patch, class: 'btn btn-success' %>
                    <%= button_to 'Reject', reject_goat_booking_path(booking.goat_id, booking), method: :patch, class: 'btn btn-danger' %>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>No bookings pending approval.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
